{
  "compilerOptions": {
    "lib": ["ES6"],
    "target": "ES2017",
    "module": "commonjs",
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "rootDir": "./",
    "outDir": "./dist",
    
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    
    "baseUrl": ".",
    "paths": {
      "@infra/*": ["./src/infra/*"],
      "@config/*": ["./src/config/*"],
      "@errors/*": ["./src/errors/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@common/*": ["./src/common/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@containers/*": ["./src/containers/*"]
    }
  }
}
